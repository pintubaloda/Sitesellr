{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Username=postgres;Password=postgres;Database=sitesellr"
  },
  "CORS_ORIGINS": "http://localhost:3000",
  "Auth": {
    "MaxFailedAttempts": 5,
    "LockoutMinutes": 15
  },
  "WebAuthn": {
    "RpId": "localhost",
    "Origin": "https://localhost:3000",
    "RpName": "Sitesellr Dev"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-Client-Id",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/auth/login",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "1m",
        "Limit": 120
      }
    ]
  }
}
